#include <iostream>
#include <array>

using namespace std;

int main()
{
    array <int, 5> a;
    int n = a.size();
    for (int i = 0; i < n; i++)
        cin >> a[i];
    
    //for printing the number of elements
    cout << "Number of elements: " << a.size() << endl;

    //for printing the capacity of array
    cout << "Total capacity of array: " << a.max_size() << endl;

    //for printing first element
    cout << "First element: " << a.front() << endl;

    //for printing last element
    cout << "Last element using last: " << a.back() << endl;

    //for filling whole array 1
    a.fill(1);
    for (int i = 0; i < n; i++)
        cout << a[i] << " " ;
        cout << endl;
    //check if array is emepty ot not
    cout << "Is Emplty?: " << a.empty() << endl;

    
    return 0;
}
